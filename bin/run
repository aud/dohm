#!/usr/bin/env bash

set -euo pipefail

echo "Running dohm..."

set -x
podman run \
  --replace \
  --name caddy \
  -p 80:80 \
  -p 443:443 \
  -e CLOUDFLARE_TOKEN="$CLOUDFLARE_TOKEN" \
  -v /home/elliot/dohm/Caddyfile:/etc/caddy/Caddyfile:ro \
  -v /home/elliot/caddy-data/site:/srv/site:ro \
  -v /home/elliot/caddy-data/data:/data \
  -v /home/elliot/caddy-data/config:/config \
  dohm:latest
set +x

echo "Done!"
